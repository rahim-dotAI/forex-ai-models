{
  "mode": "aggressive",
  "use_sentiment": true,

  "settings": {
    "aggressive": {
      "threshold": 45,
      "min_adx": 15,
      "rsi_oversold": 30,
      "rsi_overbought": 70,
      "min_volume_ratio": 1.0,
      "volume_penalty": 0,

      "min_risk_reward": 1.8,

      "atr_stop_multiplier": 1.5,
      "atr_target_multiplier": 3.0,

      "max_correlated_signals": 2
    },

    "conservative": {
      "threshold": 55,
      "min_adx": 18,
      "rsi_oversold": 25,
      "rsi_overbought": 75,
      "min_volume_ratio": 1.0,
      "volume_penalty": 0,

      "min_risk_reward": 2.0,

      "atr_stop_multiplier": 1.8,
      "atr_target_multiplier": 4.0,

      "max_correlated_signals": 1
    }
  },

  "advanced": {
    "enable_session_filtering": true,
    "enable_correlation_filter": true,
    "enable_performance_optimization": true,

    "cache_ttl_minutes": 5,
    "parallel_workers": 3,

    "session_bonuses": {
      "ASIAN": {
        "JPY_pairs": 5,
        "AUD_NZD_pairs": 5,
        "other": 0
      },
      "EUROPEAN": {
        "EUR_GBP_pairs": 5,
        "EUR_GBP_crosses": 3,
        "other": 0
      },
      "OVERLAP": {
        "all_major_pairs": 3
      },
      "US": {
        "USD_majors": 5,
        "other": 0
      },
      "LATE_US": {
        "all_major_pairs": 0
      }
    },

    "validation": {
      "max_price_change_pct": 0.03,
      "max_signal_age_seconds": 900,

      "min_sl_pips": {
        "JPY_pairs": 10,
        "other": 6
      },

      "max_spread_ratio": 0.25,
      "require_direction": true,
      "reject_missing_pips": true
    }
  },

  "risk_management": {
    "max_daily_risk_pips": 150,
    "max_open_positions": 3,
    "max_correlated_exposure": 1,

    "stop_trading_on_drawdown_pips": 100,

    "equity_protection": {
      "enable": true,
      "max_consecutive_losses": 5,
      "pause_minutes_after_hit": 120
    }
  },

  "performance_tracking": {
    "enable": true,
    "history_file": "signal_state/signal_history.json",

    "idempotency": {
      "enabled": true,
      "scope": "daily"
    },

    "equity_curve": {
      "enabled": true,
      "max_points": 1000
    },

    "analytics": {
      "track_by_pair": true,
      "track_by_confidence": true,
      "track_by_session": true
    },

    "exports": {
      "enable_csv": true,
      "csv_path": "performance_export.csv"
    }
  },

  "performance_tuning": {
    "auto_adjust_thresholds": true,
    "min_trades_for_optimization": 30,
    "optimization_interval_days": 7,

    "target_win_rate": 0.35,

    "optimization_inputs": {
      "use_expectancy": true,
      "use_win_rate": true,
      "use_avg_rr": true,
      "min_expectancy": 0.2
    }
  },

  "logging": {
    "performance_level": "INFO",
    "log_equity_updates": true,
    "log_duplicate_signals": true
  }
}
